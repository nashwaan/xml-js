{
  "name": "xml-js-json",
  "version": "0.1.0",
  "description": "A convertor between XML text and Javascript object / JSON text.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nashwaan/xml-js-json.git"
  },
  "author": "Yousuf Almarzooqi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nashwaan/xml-js-json/issues"
  },
  "homepage": "https://github.com/nashwaan/xml-js-json#readme",
  "keywords": [
    "XML",
    "js",
    "JSON",
    "Javascript",
    "transformation",
    "transforming",
    "transformer",
    "convertion",
    "converting",
    "convertor",
    "parsing",
    "parser"
  ],
  "dependencies": {
    "sax": "^1.2.1"
  },
  "devDependencies": {
    "browser-sync": "latest",
    "istanbul": "^0.4.3",
    "istanbul-coveralls": "latest",
    "jasmine": "latest",
    "npm-run-all": "latest",
    "rimraf": "latest",
    "watch": "latest",
    "watchify": "latest"
  },
  "scripts": {
    "jasmine-manual": "node test/index.js",
    "jasmine": "jasmine JASMINE_CONFIG_PATH=./jasmine.json",
    "watch:jasmine": "watch \"npm run jasmine\" lib/ test/",
    "bundle:jasmine": "watchify test/js2xml_test.js test/xml2js_test.js --verbose --list --outfile jasmine/bundle.js",
    "live:jasmine": "browser-sync start --port 9991 --server jasmine/ --files jasmine/ --browser \"google chrome\" --no-ui --no-online",
    "istanbul": "istanbul cover test/index.js",
    "istanbul:coveralls": "npm run istanbul && istanbul-coveralls",
    "watch:istanbul": "watch \"npm run istanbul\" lib/ test/",
    "live:istanbul": "browser-sync start --port 9992 --server coverage/lcov-report/ --files coverage/lcov-report/ --browser \"google chrome\" --no-ui --no-online",
    "live": "npm-run-all --parallel live:*",
    "start": "npm-run-all --parallel bundle:jasmine watch:istanbul live:*",
    "git:commit": "git commit -a -m \"Committed by npm script.\"",
    "git:push": "git push",
    "deploy": "npm-run-all --serial git:* istanbul:coveralls",
    "test": "npm run jasmine"
  }
}